rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {


    // Pinned deals - publiek lezen, beheerders schrijven
    match /pinnedDeals/{configId} {
      allow read: if true;
      allow write: if isGifteezAdmin();
    }
    function isGifteezAdmin() {
      return request.auth != null &&
             request.auth.token.email != null &&
             request.auth.token.email.matches('(?i)^(admin|kevin|beheer|test)@gifteez\\.nl$');
    }

    // Each authenticated user can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Blog posts - public read, admin write
    match /blog-posts/{postId} {
      // Iedereen kan gepubliceerde blog posts lezen
      allow read: if true;
      
      // Alleen admins kunnen blog posts maken/bewerken/verwijderen
      allow create, update, delete: if isGifteezAdmin();
    }

    // Amazon productbibliotheek - publieke leesrechten, admin write
    match /amazonProducts/{productId} {
      allow read: if true;
      allow write: if isGifteezAdmin();
    }

    // Deal categorieblokken - publiek lezen, beheerders schrijven
    match /dealCategoryBlocks/{configId} {
      allow read: if true;
      allow write: if isGifteezAdmin();
    }
    
    // Analytics en andere admin data
    match /admin/{document=**} {
      allow read, write: if isGifteezAdmin();
    }

    // Newsletter subscribers - users can subscribe themselves, admins can manage
    match /newsletter_subscribers/{email} {
      // Iedereen kan zichzelf toevoegen (subscribe)
      allow create: if true;
      // Users kunnen hun eigen subscription status updaten (unsubscribe)
      allow update: if request.resource.data.email == resource.data.email;
      // Alleen admins kunnen alles lezen en verwijderen
      allow read, delete: if isGifteezAdmin();
    }

    // Email templates - alleen admins
    match /email_templates/{templateId} {
      allow read, write: if isGifteezAdmin();
    }

    // Email campaigns - alleen admins
    match /email_campaigns/{campaignId} {
      allow read, write: if isGifteezAdmin();
    }

    // Contact messages - public create, admin read/update
    match /contact_messages/{messageId} {
      allow create: if true;
      allow read, update, delete: if isGifteezAdmin();
    }
  }
}
