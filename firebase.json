{
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "cleanUrls": true,
    "headers": [
      {
        "source": "**/*.html",
        "headers": [{ "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }]
      },
      {
        "source": "**/*.{js,css}",
        "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
      },
      {
        "source": "**/*.{png,jpg,jpeg,gif,webp,avif,svg,ico}",
        "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
      },
      {
        "source": "/assets/**",
        "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
      },
      {
        "source": "**",
        "headers": [
          { "key": "X-Frame-Options", "value": "DENY" },
          { "key": "X-Content-Type-Options", "value": "nosniff" },
          { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
          { "key": "Permissions-Policy", "value": "geolocation=(), microphone=(), camera=()" },
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://www.google-analytics.com https://www.dwin2.com https://ct.pinterest.com https://s.pinimg.com https://*.firebaseio.com https://*.firebaseapp.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https: blob:; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self' https://*.googleapis.com https://*.google-analytics.com https://*.analytics.google.com https://*.firebaseio.com https://*.firebaseapp.com https://www.google-analytics.com https://ct.pinterest.com wss://*.firebaseio.com; frame-src 'self' https://ct.pinterest.com https://www.googletagmanager.com; object-src 'none'; base-uri 'self'; form-action 'self';"
          }
        ]
      }
    ],
    "redirects": [
      { "source": "www.gifteez.nl/**", "destination": "https://gifteez.nl/:splat", "type": 301 },
      { "source": "/shop", "destination": "/deals", "type": 301 },
      { "source": "/shop/**", "destination": "/deals", "type": 301 },
      { "source": "/api/visit", "destination": "/deals", "type": 301 },
      { "source": "/blog/cadeaus-voor-tech-liefhebbers", "destination": "/blog", "type": 301 },
      { "source": "/blog/beste-ervaringscadeaus-2025", "destination": "/blog", "type": 301 },
      { "source": "/blog/vergelijking-draadloze-oordopjes", "destination": "/blog", "type": 301 },
      { "source": "/blog/originele-cadeaus-voor-mannen", "destination": "/blog", "type": 301 },
      { "source": "/blog/duurzame-cadeaus-die-goed-doen", "destination": "/blog", "type": 301 },
      { "source": "/blog/valentijnscadeaus", "destination": "/blog", "type": 301 },
      { "source": "/blog/ultieme-gids-kerstcadeaus", "destination": "/blog", "type": 301 },
      { "source": "/blog/valentijnsdag-cadeau-gids", "destination": "/blog", "type": 301 },
      { "source": "/blog/originele-cadeaus-voor-de-man", "destination": "/blog", "type": 301 }
    ],
    "rewrites": [
      { "source": "/api/**", "function": "api" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
